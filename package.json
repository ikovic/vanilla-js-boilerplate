{
  "name": "vanilla-js-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for vanilla JS projects",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikovic/vanilla-js-boilerplate.git"
  },
  "author": "Ivan Kovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ikovic/vanilla-js-boilerplate/issues"
  },
  "homepage": "https://github.com/ikovic/vanilla-js-boilerplate#readme",
  "dependencies": {},
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  }
}
